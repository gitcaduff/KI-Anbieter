---
import Link from "@/components/ui/link.astro";
import providers from "@/data/providers.json";
import Layout from "@/layouts/Layout.astro";

const bernProviders = providers.providers.filter(provider => 
  provider.kanton.toLowerCase() === "bern" || 
  provider.kanton.toLowerCase() === "be"
);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "KI Anbieter Bern | Schweizer KI-Landschaft",
  "description": "Entdecken Sie die Berner KI-Landschaft. Finden Sie den passenden KI-Anbieter in Bern für Ihr Unternehmen.",
  "url": "https://ki-anbieter.ch/bern"
};
---

<head>
  <meta name="description" content="Entdecken Sie die Berner KI-Landschaft. Finden Sie den passenden KI-Anbieter in Bern für Ihr Unternehmen. Unabhängig, aktuell und verständlich." />
  <meta name="keywords" content="KI Anbieter Bern, KI Unternehmen Bern, KI Dienstleister Bern, KI Beratung Bern" />
  <meta property="og:title" content="KI Anbieter Bern | Schweizer KI-Landschaft" />
  <meta property="og:description" content="Entdecken Sie die Berner KI-Landschaft. Finden Sie den passenden KI-Anbieter in Bern für Ihr Unternehmen." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://ki-anbieter.ch/bern" />
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</head>

<Layout title="KI Anbieter Bern | Schweizer KI-Landschaft">
  <main class="bg-gradient-to-br from-slate-50 to-white">
    <div class="max-w-6xl mx-auto px-4 py-20 md:py-28">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight text-slate-900">
            KI-Anbieter in Bern
            <span class="block text-2xl lg:text-3xl xl:text-4xl font-normal mt-4 text-slate-600">
              Innovation aus der Bundesstadt
            </span>
          </h1>
          <p class="text-lg mt-8 text-slate-600 max-w-xl">
            Entdecken Sie die Berner KI-Landschaft - von etablierten Unternehmen bis zu innovativen Startups. 
            Unabhängig, aktuell und verständlich.
          </p>
          <div class="mt-10 flex flex-col sm:flex-row gap-4">
            <Link
              href="/anbieter"
              size="lg"
              style="primary"
              class="inline-flex items-center justify-center">
              Alle Anbieter entdecken
            </Link>
            <Link
              href="/branchen"
              size="lg"
              style="outline"
              class="inline-flex items-center justify-center">
              Nach Branche suchen
            </Link>
          </div>
        </div>
        
        <div class="hidden lg:block">
          <div class="grid grid-cols-2 gap-6">
            <div class="space-y-6">
              <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
                <div class="flex items-center gap-4">
                  <div class="p-3 bg-blue-50 rounded-lg text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <span class="text-lg font-medium">Berner Qualität</span>
                </div>
              </div>
              <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
                <div class="flex items-center gap-4">
                  <div class="p-3 bg-green-50 rounded-lg text-green-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                  </div>
                  <span class="text-lg font-medium">Lokale Expertise</span>
                </div>
              </div>
            </div>
            <div class="space-y-6 mt-12">
              <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
                <div class="flex items-center gap-4">
                  <div class="p-3 bg-purple-50 rounded-lg text-purple-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <span class="text-lg font-medium">Innovation</span>
                </div>
              </div>
              <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
                <div class="flex items-center gap-4">
                  <div class="p-3 bg-yellow-50 rounded-lg text-yellow-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                  <span class="text-lg font-medium">Netzwerk</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {bernProviders.length > 0 ? (
        <div class="mt-24">
          <h2 class="text-3xl font-bold text-slate-900 mb-8">KI-Anbieter in Bern</h2>
          <div class="grid gap-8">
            {bernProviders.map((provider) => (
              <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 hover:shadow-md transition-shadow">
                <div class="flex flex-col md:flex-row md:items-start gap-6">
                  <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                      <h3 class="text-2xl font-semibold text-slate-900">{provider.name}</h3>
                      <span class="px-3 py-1 text-sm font-medium bg-slate-100 text-slate-700 rounded-full">
                        {provider.kanton}
                      </span>
                    </div>
                    <p class="text-slate-600 mb-6">{provider.description}</p>
                    
                    {provider.branchen && provider.branchen.length > 0 && (
                      <div class="mb-6">
                        <h4 class="text-sm font-medium text-slate-900 mb-2">Branchen</h4>
                        <div class="flex flex-wrap gap-2">
                          {provider.branchen.map((branche) => (
                            <span class="px-3 py-1 text-sm bg-blue-50 text-blue-700 rounded-full">
                              {branche}
                            </span>
                          ))}
                        </div>
                      </div>
                    )}

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                      {provider.technologie && (
                        <div>
                          <span class="font-medium text-slate-900">Technologie:</span>
                          <span class="text-slate-600 ml-2">{provider.technologie}</span>
                        </div>
                      )}
                      {provider.preis && (
                        <div>
                          <span class="font-medium text-slate-900">Preismodell:</span>
                          <span class="text-slate-600 ml-2">{provider.preis}</span>
                        </div>
                      )}
                      {provider.hosting && (
                        <div>
                          <span class="font-medium text-slate-900">Hosting:</span>
                          <span class="text-slate-600 ml-2">{provider.hosting}</span>
                        </div>
                      )}
                    </div>
                  </div>

                  <div class="md:w-64 flex flex-col gap-4">
                    {provider.services && provider.services.length > 0 && (
                      <div>
                        <h4 class="text-sm font-medium text-slate-900 mb-2">Services</h4>
                        <ul class="space-y-2">
                          {provider.services.map((service) => (
                            <li class="flex items-center gap-2 text-sm text-slate-600">
                              <svg class="h-4 w-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                              {service}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {provider.features && provider.features.length > 0 && (
                      <div>
                        <h4 class="text-sm font-medium text-slate-900 mb-2">Features</h4>
                        <ul class="space-y-2">
                          {provider.features.map((feature) => (
                            <li class="flex items-center gap-2 text-sm text-slate-600">
                              <svg class="h-4 w-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                              {feature}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {provider.website && (
                      <Link
                        href={provider.website}
                        target="_blank"
                        rel="noopener noreferrer"
                        size="md"
                        style="primary"
                        class="mt-auto">
                        Website besuchen
                      </Link>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ) : (
        <div class="mt-24 text-center">
          <h2 class="text-3xl font-bold text-slate-900 mb-4">Keine Anbieter in Bern gefunden</h2>
          <p class="text-slate-600 mb-8">
            Aktuell sind keine KI-Anbieter aus Bern in unserer Datenbank. 
            Schauen Sie sich unsere anderen Anbieter an oder kontaktieren Sie uns, 
            wenn Sie einen Berner Anbieter kennen.
          </p>
          <Link
            href="/anbieter"
            size="lg"
            style="primary"
            class="inline-flex items-center justify-center">
            Alle Anbieter anzeigen
          </Link>
        </div>
      )}
    </div>
  </main>
</Layout> 