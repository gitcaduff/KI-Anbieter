---
import Link from "@/components/ui/link.astro";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "KI Anbieter Schweiz",
  "url": "https://ki-anbieter.ch",
  "description": "Entdecken Sie die Schweizer KI-Landschaft - von Zürich bis Genf. Finden Sie den passenden KI-Anbieter für Ihr Unternehmen.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://ki-anbieter.ch/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<head>
  <title>KI Anbieter Schweiz | Schweizer KI-Landschaft</title>
  <meta name="description" content="Entdecken Sie die Schweizer KI-Landschaft - von Zürich bis Genf. Finden Sie den passenden KI-Anbieter für Ihr Unternehmen. Unabhängig, aktuell und verständlich." />
  <meta name="keywords" content="KI Anbieter Schweiz, Schweizer KI-Landschaft, KI Unternehmen Schweiz, KI Dienstleister Schweiz, KI Beratung Schweiz" />
  <meta property="og:title" content="KI Anbieter Schweiz | Schweizer KI-Landschaft" />
  <meta property="og:description" content="Entdecken Sie die Schweizer KI-Landschaft - von Zürich bis Genf. Finden Sie den passenden KI-Anbieter für Ihr Unternehmen." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://ki-anbieter.ch" />
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</head>

<main class="bg-gradient-to-br from-slate-50 to-white">
  <div class="max-w-6xl mx-auto px-4 py-20 md:py-28">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div>
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight text-slate-900">
          Schweizer KI-Anbieter
          <span class="block text-2xl lg:text-3xl xl:text-4xl font-normal mt-4 text-slate-600">
            Finden Sie den passenden Partner für Ihr Unternehmen
          </span>
        </h1>
        <p class="text-lg mt-8 text-slate-600 max-w-xl">
          Entdecken Sie die Schweizer KI-Landschaft - von Zürich bis Genf, von Startups bis etablierten Unternehmen. 
          Unabhängig, aktuell und verständlich.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row gap-4">
          <Link
            href="/anbieter"
            size="lg"
            style="primary"
            class="inline-flex items-center justify-center">
            Anbieter entdecken
          </Link>
          <Link
            href="/branchen"
            size="lg"
            style="outline"
            class="inline-flex items-center justify-center">
            Nach Branche suchen
          </Link>
        </div>
      </div>
      
      <div class="hidden lg:block">
        <div class="grid grid-cols-2 gap-6">
          <div class="space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
              <div class="flex items-center gap-4">
                <div class="p-3 bg-blue-50 rounded-lg text-blue-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <span class="text-lg font-medium">Schweizer Qualität</span>
              </div>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
              <div class="flex items-center gap-4">
                <div class="p-3 bg-green-50 rounded-lg text-green-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
                <span class="text-lg font-medium">Datenschutz</span>
              </div>
            </div>
          </div>
          <div class="space-y-6 mt-12">
            <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
              <div class="flex items-center gap-4">
                <div class="p-3 bg-purple-50 rounded-lg text-purple-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <span class="text-lg font-medium">Innovation</span>
              </div>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
              <div class="flex items-center gap-4">
                <div class="p-3 bg-yellow-50 rounded-lg text-yellow-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <span class="text-lg font-medium">Experten-Netzwerk</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
