---
import providersData from '../data/providers.json';
import Link from "./ui/link.astro";

const { providers } = providersData;
---

<section class="py-16 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-4xl font-bold text-slate-900 sm:text-5xl">
        Schweizer KI-Anbieter
      </h2>
      <p class="mt-6 text-xl text-slate-600">
        Entdecken Sie die Schweizer KI-Landschaft - von ZÃ¼rich bis Genf
      </p>
    </div>

    <div class="mt-16 space-y-12">
      {providers.map((provider) => (
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-md transition-shadow">
          <div class="p-8">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-2xl font-semibold text-slate-900">
                {provider.name}
              </h3>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                {provider.kanton}
              </span>
            </div>
            
            <p class="text-lg text-slate-600">
              {provider.description}
            </p>

            {provider.services && (
              <div class="mt-8">
                <h4 class="text-base font-medium text-slate-900 mb-3">Services:</h4>
                <ul class="space-y-3">
                  {provider.services.map((service) => (
                    <li class="text-base text-slate-600 flex items-start">
                      <svg class="h-5 w-5 text-blue-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {service}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {provider.features && (
              <div class="mt-8">
                <h4 class="text-base font-medium text-slate-900 mb-3">Features:</h4>
                <ul class="space-y-3">
                  {provider.features.map((feature) => (
                    <li class="text-base text-slate-600 flex items-start">
                      <svg class="h-5 w-5 text-blue-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <div class="mt-8 flex flex-wrap gap-3">
              {provider.branchen.map((branche) => (
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-slate-100 text-slate-800">
                  {branche}
                </span>
              ))}
            </div>

            <div class="mt-8 pt-8 border-t border-slate-200">
              <div class="flex flex-col space-y-4">
                {provider.technologie && (
                  <div class="flex items-center text-base text-slate-600">
                    <svg class="h-5 w-5 text-slate-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                    {provider.technologie}
                  </div>
                )}
                <div class="flex items-center text-base text-slate-600">
                  <svg class="h-5 w-5 text-slate-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                  </svg>
                  {provider.preis}
                </div>
                <div class="flex items-center text-base text-slate-600">
                  <svg class="h-5 w-5 text-slate-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {provider.hosting}
                </div>
              </div>
            </div>

            <div class="mt-8">
              <Link
                href={provider.website}
                target="_blank"
                rel="noopener noreferrer"
                size="md"
                style="primary"
                class="inline-flex items-center">
                Website besuchen
                <svg class="ml-2 -mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </Link>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 